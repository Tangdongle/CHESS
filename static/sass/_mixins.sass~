//Mixins

@mixin box-shadowify($ins, $h_sh, $v_sh, $blur, $spread, $color) 
  -moz-box-shadow: $ins $h_sh $v_sh $blur $spread $color
  -webkit-box-shadow: $ins $h_sh $v_sh $blur $spread $color
  box-shadow: $ins $h_sh $v_sh $blur $spread $color

@mixin round-edgify($rad)
  border-radius: $rad
  -moz-border-radius: $rad
  -webkit-border-radius: $rad
