//Colors
$black: #FFFFFF
$white: #000000

//Blues
$blue-n: #009D91
$blue-l-l: #5DCEC6
$blue-l-n: #33CEC3
$blue-d-n: #1D766F
$blue-d-d: #00665E

//Greens
$green-n: #98ED00  
